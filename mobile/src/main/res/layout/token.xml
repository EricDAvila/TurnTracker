    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:id="@+id/TokenView">

<ImageView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/red"
    android:id="@+id/TokenShape"
    />
    <TextView
